<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
		<param-value>org.mxhero.engine.plugin.attachmentlink.fileserver.view.Messages</param-value>
	</context-param>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/classes/application-context.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>fileService</servlet-name>
		<servlet-class>org.mxhero.engine.plugin.attachmentlink.fileserver.servlet.FileService</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>unsuscribeServlet</servlet-name>
		<servlet-class>org.mxhero.engine.plugin.attachmentlink.fileserver.servlet.UnsuscribeServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>fileService</servlet-name>
		<url-pattern>/download</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>unsuscribeServlet</servlet-name>
		<url-pattern>/unsuscribe</url-pattern>
	</servlet-mapping>
</web-app>
