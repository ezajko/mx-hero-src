<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   close="closeEmail(event)">

	<fx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			
			import org.mxhero.console.frontend.domain.Record;
			
			[Bindable]
			public var email:Record;
			
			protected function closeEmail(event:*):void
			{
				PopUpManager.removePopUp(this);
			}


		]]>
	</fx:Script>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:layout>
		<s:VerticalLayout horizontalAlign="center" paddingBottom="20"/>
	</s:layout>
	<mx:Form width="100%" defaultButton="{closeBtt}">
		<mx:FormItem label="Message-Id:" width="100%" labelWidth="110">
			<s:TextInput editable="false" text="{email.messageId}" width="100%"/>
		</mx:FormItem>		
		<mx:FormItem label="From:" width="100%" labelWidth="110">
			<s:TextInput editable="false" text="{email.from}" width="100%"/>
		</mx:FormItem>
		<mx:FormItem label="Sender:" width="100%" labelWidth="110">
			<s:TextInput editable="false" text="{email.sender}" width="100%"/>
		</mx:FormItem>
		<mx:FormItem label="Recipient:" width="100%" labelWidth="110">
			<s:TextInput editable="false" text="{email.recipient}" width="100%"/>
		</mx:FormItem>
		<mx:FormItem label="To:" width="100%" labelWidth="110">
			<s:TextArea editable="false" text="{email.toRecipients}" width="100%" heightInLines="2"/>
		</mx:FormItem>
		<mx:FormItem label="Cc:" width="100%" labelWidth="110">
			<s:TextArea editable="false" text="{email.ccRecipients}" width="100%" heightInLines="2"/>
		</mx:FormItem>
		<mx:FormItem label="Bcc:" width="100%" labelWidth="110">
			<s:TextArea editable="false" text="{email.bccRecipients}" width="100%" heightInLines="2"/>
		</mx:FormItem>
		<mx:FormItem label="Subject:" width="100%" labelWidth="110">
			<s:TextInput editable="false" text="{email.subject}" width="100%"/>
		</mx:FormItem>
		<s:HGroup width="100%">
			<mx:FormItem label="Phase:" width="100%" labelWidth="110">
				<s:TextInput editable="false" text="{email.phase}"/>
			</mx:FormItem>
			<mx:FormItem label="Size(MB):" width="100%" labelWidth="110">
				<s:TextInput editable="false" text="{int((((email.bytesSize)/1024)/1024)*1000)/1000}"/>
			</mx:FormItem>
		</s:HGroup>
		<s:HGroup width="100%">
			<mx:FormItem label="State:" width="100%" labelWidth="110">
				<s:TextInput editable="false" text="{email.state}"/>
			</mx:FormItem>
			<mx:FormItem label="State Reason:" width="100%" labelWidth="110">
				<s:TextInput editable="false" text="{email.stateReason}" width="100%"/>
			</mx:FormItem>
		</s:HGroup>
	</mx:Form>
	<s:Button id="closeBtt" label="Close" click="closeEmail(event)"/>
</s:TitleWindow>
