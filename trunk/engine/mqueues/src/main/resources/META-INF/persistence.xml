<persistence xmlns="http://java.sun.com/xml/ns/persistence"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
		version="1.0">

	<persistence-unit name="mqueuesPer" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jar-file></jar-file>
		<class>org.mxhero.engine.mqueues.internal.queue.entity.Record</class>
		<class>org.mxhero.engine.mqueues.internal.queue.entity.RecordPk</class>
		<class>org.mxhero.engine.mqueues.internal.queue.entity.RecordProperty</class>
		<class>org.mxhero.engine.mqueues.internal.queue.entity.RecordPropertyPk</class>
		
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
	</persistence-unit>

</persistence>