<?xml version="1.0"?>
<!DOCTYPE schema PUBLIC "-//EXOLAB/Castor Object Mapping DTD Version 1.0//EN"
                        "http://castor.org/mapping.dtd">
<mapping>
	<class name="org.mxhero.engine.plugin.xmlfinder.internal.model.DomainListXML">
		<map-to xml="domain-list" />
		<field name="domains" type="org.mxhero.engine.plugin.xmlfinder.internal.model.DomainXML"
			collection="collection">
			<bind-xml name="domain" />
		</field>
	</class>
	<class name="org.mxhero.engine.plugin.xmlfinder.internal.model.DomainXML">
		<map-to xml="domain" />
		<field name="id" type="string">
			<bind-xml name="id" node="attribute"/>
		</field>
		<field name="aliases" type="string" collection="collection">
			<bind-xml name="alias"/>
		</field>
		<field name="groups" type="org.mxhero.engine.plugin.xmlfinder.internal.model.GroupXML"
			collection="collection">
			<bind-xml name="group"/>
		</field>
		<field name="mailLists" type="org.mxhero.engine.plugin.xmlfinder.internal.model.MailListXML"
			collection="collection">
			<bind-xml name="mail-list"/>
		</field>
		<field name="users" type="org.mxhero.engine.plugin.xmlfinder.internal.model.UserXML"
			collection="collection">
			<bind-xml name="user"/>
		</field>				
	</class>
	<class name="org.mxhero.engine.plugin.xmlfinder.internal.model.GroupXML">
		<map-to xml="group"/>
		<field name="name" type="string">
			<bind-xml name="name" node="attribute"/>
		</field>
		<field name="mails" type="string" collection="collection">
			<bind-xml name="mail"/>
		</field>		
	</class>
	<class name="org.mxhero.engine.plugin.xmlfinder.internal.model.MailListXML">
		<map-to xml="mail-list"/>
		<field name="name" type="string">
			<bind-xml name="name" node="attribute"/>
		</field>
		<field name="mails" type="string" collection="collection">
			<bind-xml name="mail" />
		</field>		
	</class>
	<class name="org.mxhero.engine.plugin.xmlfinder.internal.model.UserXML">
		<map-to xml="user"/>
		<field name="mail" type="string">
			<bind-xml name="mail" node="attribute"/>
		</field>
		<field name="mailLists" type="org.mxhero.engine.plugin.xmlfinder.internal.model.MailListXML"
			collection="collection">
			<bind-xml name="mail-list" />
		</field>		
		<field name="aliases" type="string" collection="collection">
			<bind-xml name="alias" />
		</field>		
	</class>	
</mapping>
