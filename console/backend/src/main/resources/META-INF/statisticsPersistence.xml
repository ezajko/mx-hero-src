<persistence xmlns="http://java.sun.com/xml/ns/persistence"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
		version="1.0">

	<persistence-unit name="statisticsPer" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>org.mxhero.console.backend.statistics.entity.Record</class>
		<class>org.mxhero.console.backend.statistics.entity.RecordPk</class>
		<class>org.mxhero.console.backend.statistics.entity.Stat</class>
		<class>org.mxhero.console.backend.statistics.entity.StatPk</class>
		<exclude-unlisted-classes/>
	</persistence-unit>

</persistence>