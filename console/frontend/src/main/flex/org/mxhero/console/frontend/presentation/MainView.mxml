<?xml version="1.0" encoding="utf-8"?>
<mx:ViewStack xmlns:fx="http://ns.adobe.com/mxml/2009" 
			  xmlns:s="library://ns.adobe.com/flex/spark" 
			  xmlns:mx="library://ns.adobe.com/flex/mx"
			  xmlns:presentation="org.mxhero.console.frontend.presentation.*" 
			  xmlns:parsley="http://www.spicefactory.org/parsley"
			  width="100%"
			  height="100%"
			  creationPolicy="all" xmlns:component="org.mxhero.console.commons.component.*">
	
	<fx:Declarations>
		<parsley:Configure/>
		<s:Fade id="fadeout" alphaFrom="1" alphaTo="0" duration="100"/>
		<s:Fade id="fadein" alphaFrom="0" alphaTo="1"/>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import org.mxhero.console.frontend.application.MainDestination;

			[Inject]
			[Bindable]
			public var model:MainViewPM;
		]]>
	</fx:Script>
	
	<fx:Metadata>
		[Waypoint]
	</fx:Metadata>

	<s:NavigatorContent width="100%" height="100%" 
						automationName="{MainDestination.LOGIN}"
						showEffect="{fadein}" hideEffect="{fadeout}">
		<s:layout>
			<s:VerticalLayout horizontalAlign="center" verticalAlign="middle" />
		</s:layout>
		<presentation:Login/>
	</s:NavigatorContent>
	
	<s:NavigatorContent width="100%" height="100%" 
						automationName="{MainDestination.LOADING}"
						showEffect="{fadein}" hideEffect="{fadeout}">
		<s:layout>
			<s:VerticalLayout horizontalAlign="center" verticalAlign="middle"/>
		</s:layout>		
		<presentation:Loading id="loading"/>
		<component:ReflectionManager id="reflectionManager" target="{loading}" falloff="0.65" blurAmount="0.15"/>
	</s:NavigatorContent>
	
	<s:NavigatorContent width="100%" height="100%" 
						automationName="{MainDestination.DASHBOARD}"
						showEffect="{fadein}" hideEffect="{fadeout}">
		<s:layout>
			<s:VerticalLayout horizontalAlign="center" verticalAlign="middle"/>
		</s:layout>		
		<presentation:Dashboard/>
	</s:NavigatorContent>
	
</mx:ViewStack>
