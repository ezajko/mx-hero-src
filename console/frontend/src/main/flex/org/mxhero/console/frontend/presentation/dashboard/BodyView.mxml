<?xml version="1.0" encoding="utf-8"?>
<mx:ViewStack xmlns:fx="http://ns.adobe.com/mxml/2009" 
			  xmlns:s="library://ns.adobe.com/flex/spark" 
			  xmlns:mx="library://ns.adobe.com/flex/mx"
			  xmlns:infrastructure="org.mxhero.console.frontend.infrastructure.*" 
			  xmlns:parsley="http://www.spicefactory.org/parsley"
			  creationPolicy="all"
			  width="100%" 
			  height="100%">
	<fx:Declarations>
		<parsley:Configure/>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import org.mxhero.console.frontend.infrastructure.ModuleData;

			[Inject(id="policies")]
			[Bindable]
			public var policiesData:ModuleData;
			
			[Inject(id="reports")]
			[Bindable]
			public var reportsData:ModuleData;
			
			[Inject(id="configurations")]
			[Bindable]
			public var configurationsData:ModuleData;
			
		]]>
	</fx:Script>

	<infrastructure:NavigatorModule width="100%" height="100%" moduleData="{policiesData}"/>
	
	<infrastructure:NavigatorModule width="100%" height="100%" moduleData="{reportsData}"/>
	
	<infrastructure:NavigatorModule width="100%" height="100%" moduleData="{configurationsData}"/>

</mx:ViewStack>
