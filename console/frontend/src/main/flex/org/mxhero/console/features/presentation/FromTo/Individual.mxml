<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 gap="20" 
		 verticalAlign="middle" 
		 xmlns:FromTo="org.mxhero.console.features.presentation.FromTo.*" 
		 xmlns:IPE="org.mxhero.console.commons.component.IPE.*" 
		 xmlns:parsley="http://www.spicefactory.org/parsley">
	
	<fx:Declarations>
		<mx:EmailValidator id="emailValidator" required="true"/>
		<parsley:Configure/>
	</fx:Declarations>
	
	<s:transitions>
		<s:Transition fromState="inactive" toState="active">
			<s:Fade target="{ipeComboBox}" alphaFrom="0" alphaTo="1"/>
		</s:Transition>
	</s:transitions>
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.collections.Sort;
			import mx.collections.SortField;
			import mx.events.FlexEvent;
			
			import org.mxhero.console.features.presentation.rule.RuleViewPM;
			
			[Bindable]
			public var parentStateFunction:Function;
			
			public var childState:String;
			
			[Bindable]
			private var sort:Sort=new Sort();

			[Inject]
			[Bindable]
			public var model:RuleViewPM;
			
			
			protected function item_clickHandler(event:MouseEvent):void
			{
				parentStateFunction(childState);
			}

			public function accountLabelFunction(item:Object):String{
				if(item!=null){
					return item.account+"@"+this.model.context.selectedDomain.domain;
				}
				return "";
			}
			
			
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="inactive"/>
		<s:State name="active"/>
	</s:states>
	
	<FromTo:Item text="Individual"
				 toolTip.inactive="Select an Email Account" 
				 toolTip.active="Clear this selection"
				 click="item_clickHandler(event)"
				 width="100"/>
	
	<s:BorderContainer id="ipeComboBox" 
					   includeIn="active"
					   backgroundColor="#7c7b7b"  
					   borderVisible="true" 
					   dropShadowVisible="true"
					   borderStyle="solid"
					   minHeight="0"
					   buttonMode="true"
					   borderColor="#cccccc" 
					   cornerRadius="4"
					   minWidth="200"
					   height="100%">
		<s:VGroup height="100%" width="100%" 
				  horizontalAlign="center" 
				  verticalAlign="middle"
				  paddingLeft="5"
				  paddingRight="5">
			<IPE:IPEComboBox subStyles="item"
							 currentState="edit"
							 dataProvider="{model.context.accounts}"
							 enableItemSelectionCheck="false" 
							 enableLabelClickChangeStatus="true"
							 enableEnterKeyChangeStatus="true"
							 enableProviderFilter="true"
							 labelFunction="{accountLabelFunction}"
							 validator="{emailValidator}"
							 labelTooltip="Click here to edit this field"
							 width="100%"/>					
		</s:VGroup>
	</s:BorderContainer>
</s:HGroup>
